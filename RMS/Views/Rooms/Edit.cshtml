@model RMS.Models.Room
@{
    ViewBag.Title = "Editar Habitación";
}
<h2>
    Editar Habitación de @Model.Hotel.Name:
</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Habitación</legend>
        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div style="display: none;">
            <div class="editor-label">
                @Html.LabelFor(model => model.IdHotel, "Hotel")
            </div>
            <div class="editor-field">
                @Html.DropDownList("IdHotel", String.Empty)
                @Html.ValidationMessageFor(model => model.IdHotel)
            </div>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Active)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Active)
            @Html.ValidationMessageFor(model => model.Active)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Capacity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Capacity)
            @Html.ValidationMessageFor(model => model.Capacity)
        </div>
        <div class="editor-label">
            @Html.Label("Precio por Noche Temporada Baja (RACK)")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LowSeasonRack)
            @Html.ValidationMessageFor(model => model.LowSeasonRack)
        </div>
        <div class="editor-label">
            @Html.Label("Precio por Noche Temporada Alta (RACK)")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HighSeasonRack)
            @Html.ValidationMessageFor(model => model.HighSeasonRack)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.LowSeasonPrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LowSeasonPrice)
            @Html.ValidationMessageFor(model => model.LowSeasonPrice)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.HighSeasonPrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HighSeasonPrice)
            @Html.ValidationMessageFor(model => model.HighSeasonPrice)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Discount1)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Discount1)
            @Html.ValidationMessageFor(model => model.Discount1)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Discount2)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Discount2)
            @Html.ValidationMessageFor(model => model.Discount2)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Discount3)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Discount3)
            @Html.ValidationMessageFor(model => model.Discount3)
        </div>
        <div class="editor-label">
            @Html.Label("% Ganancia Administración")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PercentAdmin)
            @Html.ValidationMessageFor(model => model.PercentAdmin)
        </div>
        <div class="editor-label">
            @Html.Label("% Comisión Agente")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PercentAgent)
            @Html.ValidationMessageFor(model => model.PercentAgent)
        </div>
        <div class="editor-label">
            @Html.Label("Tipo de Habitación")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdRoomType",String.Empty)
            @Html.ValidationMessageFor(model => model.IdRoomType)
        </div>
        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Volver al listado", "Index", new { IdHotel = Model.IdHotel })
</div>
