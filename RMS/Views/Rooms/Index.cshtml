@model IEnumerable<RMS.Models.Room>
@{
    ViewBag.Title = "Listado de Habitaciones";
    RMS.Models.Hotel __hotel = ViewBag.Hotel as RMS.Models.Hotel;
}
<h2>
    Habitaciones de @__hotel.Name</h2>
<p>
    @Html.ActionLink("Crear Nuevo", "Create", new { IdHotel = Request.QueryString["IdHotel"] })
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Capacidad
        </th>
        <th>
            PPN Temp. Alta
        </th>
        <th>
            PPN Temp. Baja
        </th>
        <th>
            %Desc. 3N
        </th>
        <th>
            %Desc. 5N
        </th>
        <th>
            %Desc. 7N
        </th>
        <th>
            Activo
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LowSeasonPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HighSeasonPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.ActionLink("Promociones", "Index", "Promo", new { IdRoom = item.Id }, null)
                |
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Volver a Hoteles", "Index", "Hotel", null, null)
</p>
