@model RMS.Models.Room
@{
    ViewBag.Title = "Delete";
}
<h2>
    Eliminar @Model.Name de @Model.Hotel.Name</h2>
<h3>
    ¿Está seguro de querer eliminar esta habitación?</h3>
<fieldset>
    <legend>Habitación</legend>
    <div class="display-label">
        Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>
    <div class="display-label">
        Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
    <div class="display-label">
        Hotel</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Hotel.Name)
    </div>
    <div class="display-label">
        Active</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Active)
    </div>
    <div class="display-label">
        Capacity</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Capacity)
    </div>
    <div class="display-label">
        LowSeasonPrice</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LowSeasonPrice)
    </div>
    <div class="display-label">
        HighSeasonPrice</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.HighSeasonPrice)
    </div>
    <div class="display-label">
        Discount1</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Discount1)
    </div>
    <div class="display-label">
        Discount2</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Discount2)
    </div>
    <div class="display-label">
        Discount3</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Discount3)
    </div>
    @*    <div class="display-label">Discount4</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Discount4)
    </div>*@
</fieldset>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="Eliminar" />
        |
        @Html.ActionLink("Volver al listado", "Index", new { IdHotel = Model.IdHotel })
    </p>
}
