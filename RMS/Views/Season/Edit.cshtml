@model RMS.Models.Period
@{
    ViewBag.Title = "Edit";
}
<h2>
    Editar Temporada Alta (@Model.Hotel.Name)</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Temporadas Altas</legend>
        @Html.HiddenFor(model => model.IdHotel)
        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">
            Nombre
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            Día de Inicio de la Temporada Alta
        </div>
        <div class="editor-field">
            <select name="BeginDay">
                @for (int i = 1; i < 32; i++)
                {
                    <option value="@i" @(Model.BeginDay.Equals(i) ? "selected='selected'" : "")>@i</option>
                }
            </select>
        </div>
        <div class="editor-label">
            Mes de Inicio de la Temporada Alta
        </div>
        <div class="editor-field">
            <select name="BeginMonth">
                @for (int i = 1; i < 13; i++)
                {
                    <option value="@i" @(Model.BeginMonth.Equals(i) ? "selected='selected'" : "")>@i</option>
                }
            </select>
        </div>
        <div class="editor-label">
            Día del Final de la Temporada Alta
        </div>
        <div class="editor-field">
            <select name="EndDay">
                @for (int i = 1; i < 32; i++)
                {
                    <option value="@i" @(Model.EndDay.Equals(i) ? "selected='selected'" : "")>@i</option>
                }
            </select>
        </div>
        <div class="editor-label">
            Mes del Final de la Temporada Alta
        </div>
        <div class="editor-field">
            <select name="EndMonth">
                @for (int i = 1; i < 13; i++)
                {
                    <option value="@i" @(Model.EndMonth.Equals(i) ? "selected='selected'" : "")>@i</option>
                }
            </select>
        </div>
        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Volver a la Lista", "Index", new { IdHotel = Model.IdHotel })
</div>
