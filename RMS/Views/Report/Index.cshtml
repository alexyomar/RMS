@model List<RMS.Models.Hotel>
<h1>
    Cálculo de Tarifas</h1>
<p>
    Seleccione el hotel y el tipo de tarifas que desee visualizar.
</p>
<form action="@Url.Action("Index")" method="post">
<table border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td>
            Hotel:
        </td>
        <td>
            <select name="hotel">
                @foreach (var item in Model)
                {
                    <option value="@item.Id">@item.Name</option> 
                }
            </select>
        </td>
        <td>
            Tipo:
        </td>
        <td>
            <select name="temporada">
                <option value="1">Temp. Alta</option>
                <option value="2">Temp. Baja</option>
                <option value="3">Promociones</option>
            </select>
        </td>
        <td>
            <input type="submit" value="Ver" />
        </td>
    </tr>
</table>
</form>
