@model RMS.Models.RoomOccupationBed
@{
    ViewBag.Title = "Delete";
}
<ul id="crumbs">
    <li><a href="@Url.Action("Index", "Hotel")">Hoteles</a></li>
    <li><a href="@Url.Action("Edit", "Hotel", new { Id = Model.Room.IdHotel })">@Model.Room.Hotel.Name</a></li>
    <li><a href="@Url.Action("Index", "Room", new { Id = Model.Room.IdHotel })">Habitaciones</a></li>
    <li><a href="@Url.Action("Edit", "Room", new { Id = Model.Room.Id }))">@Model.Room.Name</a></li>
    <li><a href="@Url.Action("Index", "RoomAccomodation", new { Id = Model.Room.Id }))">
        Camas</a></li>
    <li>Eliminar Camas</li>
</ul>
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td valign="middle">
            <h1 style="margin: 0px; padding: 0px">
                Eliminar camas para la habitación @Model.Room.Name
                <br />
                en @Model.Room.Hotel.Name</h1>
        </td>
        <td>
            <a href="@Url.Action("Index", "RoomAccomodation", new { Id = Model.Room.Id })" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/back.png")" />
                &nbsp;&nbsp;Volver</a>
        </td>
    </tr>
</table>
<h3>
    ¿Está seguro de eliminar esta asignación?</h3>
<fieldset>
    <legend>Camas</legend>
    @Html.Hidden("IdRoom", Model.IdRoom)
    <div class="display-label">
        Cantidad</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Quantity)
    </div>
    <div class="display-label">
        Tipo</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.RoomBed.Name)
    </div>
    @using (Html.BeginForm())
    {
        <p>
            <input type="submit" value="Eliminar" />
        </p>
    }
</fieldset>
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td>
            <a href="@Url.Action("Index", "RoomAccomodation", new { Id = Model.Room.Id })" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/back.png")" />
                &nbsp;&nbsp;Volver</a>
        </td>
    </tr>
</table>
