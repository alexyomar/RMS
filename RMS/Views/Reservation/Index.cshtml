@model IEnumerable<RMS.Models.Reservation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Customer
        </th>
        <th>
            Arrival
        </th>
        <th>
            Departure
        </th>
        <th>
            ReservationDate
        </th>
        <th>
