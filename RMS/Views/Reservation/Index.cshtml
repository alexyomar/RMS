@model IEnumerable<RMS.Models.Reservation>
@{
    ViewBag.Title = "Reservaciones";
}
<h2>
    Reservaciones</h2>
<p>
    @Html.ActionLink("Crear Nueva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha de creación
        </th>
        <th>
            Cliente
        </th>
        <th>
            Llegada
        </th>
        <th>
            Salida
        </th>
        <th>
            Adultos
        </th>
        <th>
            Niños
        </th>
        <th>
            Total
        </th>
        <th>
            Estado
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name) @Html.DisplayFor(modelItem => item.Customer.LastName)
                (@Html.DisplayFor(modelItem => item.Customer.PersonalId))
            </td>
            <td>
                @Html.Label(item.Arrival.ToShortDateString())
            </td>
            <td>
                @Html.Label(item.Departure.ToShortDateString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adults)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Childrens)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationStatu.Name)
            </td>
            <td>
                @Html.ActionLink("Detalles", "PrintableVersion", new { id = item.Id }, new { target = "_blank" })
                |
                @Html.ActionLink("Descargar PDF", "PrintPDF", new { id = item.Id })
            </td>
        </tr>
    }
</table>
