@model RMS.Models.Reservation
@{
    ViewBag.Title = "Editar Reservación";
}
<h2>
    Editar Reservación</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
  
    <fieldset>
        <legend>Reservación</legend>
        <br />
        <table class="table">
            <tr>
                <th>
                    Número
                </th>
                <th>
                    Cliente
                </th>
                <th>
                    Fecha de reservación
                </th>
                <th>
                    Fecha de Llegada
                </th>
                <th>
                    Fecha de Salida
                </th>
            </tr>
            <tr>
                <td>@Model.Id
                </td>
                <td>@Model.Customer.Name @Model.Customer.LastName
                </td>
                <td>@Model.ReservationDate.ToShortDateString()
                </td>
                <td>@Model.Arrival.ToShortDateString()
                </td>
                <td>@Model.Departure.ToShortDateString()
                </td>
            </tr>
        </table>
        <br />
        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">
            Estatus:
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdReservationStatus", String.Empty)
            @Html.ValidationMessageFor(model => model.IdReservationStatus)
        </div>
        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Volver al listado", "Index")
</div>
