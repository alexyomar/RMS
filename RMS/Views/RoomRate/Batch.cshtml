<!DOCTYPE html>
<html>
<head>
    <title>Cambiar variables globales</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body style="background-color: white; padding: 10px">
    <h2>
        Cambiar variables para todas tarifas en la habitación:</h2>
    <form action="@Url.Action("Batch")" method="post">
    @{
        int __idroom = ViewBag.IdRoom;
    }
    @Html.Hidden("IdRoom", __idroom)
    <table border="0" cellpadding="6" cellspacing="0">
        <tr>
            <td>
                %Desc. 2N
            </td>
            <td>
                <input type="text" name="descuesto1" style="width: 30px" />
            </td>
        </tr>
        <tr>
            <td>
                %Desc. 4N
            </td>
            <td>
                <input type="text" name="descuesto2" style="width: 30px" />
            </td>
        </tr>
        <tr>
            <td>
                %Desc. 7N
            </td>
            <td>
                <input type="text" name="descuesto3" style="width: 30px" />
            </td>
        </tr>
        <tr>
            <td>
                % Agente
            </td>
            <td>
                <input type="text" name="percentagent" style="width: 30px" />
            </td>
        </tr>
        <tr>
            <td>
                % Ganacia Admon
            </td>
            <td>
                <input type="text" name="percentadmon" style="width: 30px" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <br />
                <input type="submit" value="Actualizar Tarifas" />
            </td>
        </tr>
    </table>
    </form>
</body>
</html>
