@model RMS.Models.Promotion
@{
    ViewBag.Title = "Crear Promoción";
    RMS.Models.Room __room = ViewBag.Room as RMS.Models.Room;
}
<h2>
    Crear Promoción para la Habitación</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@__room.Name (@__room.Hotel.Name) </legend>
        @Html.Hidden("IdRoom", __room.Id)
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.Label("Precio por Noche Temporada Baja (RACK)")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LowSeasonRack)
            @Html.ValidationMessageFor(model => model.LowSeasonRack)
        </div>
        <div class="editor-label">
            @Html.Label("Precio por Noche Temporada Alta (RACK)")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HighSeasonRack)
            @Html.ValidationMessageFor(model => model.HighSeasonRack)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.LowSeasonPrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LowSeasonPrice)
            @Html.ValidationMessageFor(model => model.LowSeasonPrice)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.HighSeasonPrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HighSeasonPrice)
            @Html.ValidationMessageFor(model => model.HighSeasonPrice)
        </div>
        <div class="editor-label">
            @Html.Label("% Ganacia Administración")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PercentAdmin)
            @Html.ValidationMessageFor(model => model.PercentAdmin)
        </div>
        <div class="editor-label">
            @Html.Label("% Comisión Agente")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PercentAgent)
            @Html.ValidationMessageFor(model => model.PercentAgent)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DateStart)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.DateStart, new { @class = "datepicker" })
            @Html.ValidationMessageFor(model => model.DateStart)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DateEnd)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.DateEnd, new { @class = "datepicker" })
            @Html.ValidationMessageFor(model => model.DateEnd)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.MinAdults)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MinAdults)
            @Html.ValidationMessageFor(model => model.MinAdults)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.MinDays)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MinDays)
            @Html.ValidationMessageFor(model => model.MinDays)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Active)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Active)
            @Html.ValidationMessageFor(model => model.Active)
        </div>
        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Volver al Listado", "Index", new { IdRoom = __room.Id })
</div>
<script type="text/javascript">
    $(function () {
        $(".datepicker").datepicker();
    });
</script>
