<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/uiCss.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.cleditor.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQuery.glob.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQuery.glob.es-VE.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.ui.ufd.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.cleditor.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $.validator.methods.number = function (value, element) {
            return !isNaN($.parseFloat(value));
        }

        $(function () {
            $.preferCulture('es-VE');
        });
    </script>
</head>
<body>
    <div class="page">
        <div id="header">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tr>
                    <td>
                        <div id="title">
                            <table border="0" cellpadding="0" cellspacing="0">
                                <tr>
                                    <td>
                                        <img src="@Url.Content("~/Content/img/logoadmin.png")" />
                                    </td>
                                    <td>
                                        <h1>
                                            &nbsp;&nbsp; Administrativo</h1>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </td>
                    <td>
                        <div id="logindisplay">
                            @Html.Partial("_LogOnPartial")
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <div id="main">
            <table cellpadding="0" cellspacing="0" width="100%">
                <tr>
                    <td width="20%" valign="top">
                        @Html.Partial("Menu")
                    </td>
                    <td width="80%" valign="top">
                        @RenderBody()
                    </td>
                </tr>
            </table>
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
