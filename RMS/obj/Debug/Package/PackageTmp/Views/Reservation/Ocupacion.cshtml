@model RMS.Models.Ocupacion
<tr>
    <td>
        <input type="checkbox" id="@item.Id" name="Rooms.IdRoom" value="@item.Id"  />
        @item.Name
    </td>
    <td>
        Adultos:&nbsp;
        <select name="Rooms.Adultos">
            @for (int i = 1; i <= item.Capacity; i++)
            {
                <option value="@i">@i</option>    
            }
        </select>
    </td>
    <td>
        Infantes:
        <select name="Rooms.Infantes">
            @for (int j = 1; j <= 3; j++)
            {
                <option value="@j">@j</option>    
            }
        </select>
    </td>
</tr>
