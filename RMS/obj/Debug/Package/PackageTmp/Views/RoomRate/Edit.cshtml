@model RMS.Models.RoomOcupation
@{
    ViewBag.Title = "Editar";
}
<ul id="crumbs">
    <li><a href="@Url.Action("Index", "Hotel")">Hoteles</a></li>
    <li><a href="@Url.Action("Edit", "Hotel", new { Id = Model.Room.Hotel.Id })">@Model.Room.Hotel.Name</a></li>
    <li><a href="@Url.Action("Index", "Room", new { Id = Model.Room.Hotel.Id })">Habitaciones</a></li>
    <li><a href="@Url.Action("Edit", "Room", new { Id = Model.Room.Id })">@Model.Room.Name</a></li>
    <li><a href="@Url.Action("Index", "RoomRate", new { Id = Model.Room.Id })">Tarifas</a></li>
    <li>Editar Tarifa</li>
</ul>
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td valign="middle">
            <h1 style="margin: 0px; padding: 0px">
                Editar Tarifa @Model.Name para la Habitación @Model.Room.Name<br />
                en @Model.Room.Hotel.Name</h1>
        </td>
        <td>
            <a href="@Url.Action("Index", "RoomRate", new { Id = Model.Room.Id })" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/back.png")" />
                &nbsp;&nbsp;Volver</a>
        </td>
    </tr>
</table>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Tarifa</legend>
        @Html.Hidden("IdRoom", Model.IdRoom)
        <div class="editor-label">
            Nombre
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
            <p>
                * Recuerde, para crear una tarifa para niños, debe llamarla "Niño".</p>
        </div>
        <div class="editor-label">
            Capacidad
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Capacity)
            @Html.ValidationMessageFor(model => model.Capacity)
        </div>
        <div class="editor-label">
            Tarifa Rack PPN Hotel
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PriceRack)
            @Html.ValidationMessageFor(model => model.PriceRack)
        </div>
        <div class="editor-label">
            Tarifa Neta PPN
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>
        <div class="editor-label">
            Inicia
        </div>
        <div class="editor-field">
            @Html.TextBox("DateStart", Model.DateStart.ToShortDateString(), new { @class = "datepicker" })
            @Html.ValidationMessageFor(model => model.DateStart)
        </div>
        <div class="editor-label">
            Termina
        </div>
        <div class="editor-field">
            @Html.TextBox("DateEnd", Model.DateEnd.ToShortDateString(), new { @class = "datepicker" })
            @Html.ValidationMessageFor(model => model.DateEnd)
        </div>
        <div class="editor-label">
            % Descuento 2N
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Discount1)
            @Html.ValidationMessageFor(model => model.Discount1)
        </div>
        <div class="editor-label">
            % Descuento 4N
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Discount2)
            @Html.ValidationMessageFor(model => model.Discount2)
        </div>
        <div class="editor-label">
            % Descuento 7N
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Discount3)
            @Html.ValidationMessageFor(model => model.Discount3)
        </div>
        <div class="editor-label">
            % Agente
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PercentAgent)
            @Html.ValidationMessageFor(model => model.PercentAgent)
        </div>
        <div class="editor-label">
            % Gastos de Administración
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PercentAdmin)
            @Html.ValidationMessageFor(model => model.PercentAdmin)
        </div>
        <div class="editor-label">
            Activo?
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Active)
            @Html.ValidationMessageFor(model => model.Active)
        </div>
        <p>
            <input type="submit" value="Editar" />
            | @Html.ActionLink("Eliminar", "Delete", new { id = Model.Id })
        </p>
    </fieldset>
}
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td valign="middle">
        </td>
        <td>
            <a href="@Url.Action("Index", "RoomRate", new { Id = Model.Room.Id })" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/back.png")" />
                &nbsp;&nbsp;Volver</a>
        </td>
    </tr>
</table>
<script type="text/javascript">
    $(".datepicker").datepicker();
</script>
