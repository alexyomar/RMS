@model RMS.Models.RoomOccupationBed
@{
    ViewBag.Title = "Create";
    RMS.Models.Room __room = ViewBag.Room;
}
<h2>
    Asignar Camas</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Camas</legend>
        @Html.Hidden("IdRoom", __room.Id)
        <div class="editor-label">
            Cantidad
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity)
        </div>
        <div class="editor-label">
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdRoomBed", string.Empty)
            @Html.ValidationMessageFor(model => model.IdRoomBed)
        </div>
        <p>
            <input type="submit" value="Asignar" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Volver al Listado", "Index", new { Id = __room.Id })
</div>
