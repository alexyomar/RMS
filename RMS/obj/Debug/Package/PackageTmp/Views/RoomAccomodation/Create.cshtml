@model RMS.Models.RoomOccupationBed
@{
    ViewBag.Title = "Create";
    RMS.Models.Room __room = ViewBag.Room;
}
<ul id="crumbs">
    <li><a href="@Url.Action("Index", "Hotel")">Hoteles</a></li>
    <li><a href="@Url.Action("Edit", "Hotel", new { Id = __room.IdHotel })">@__room.Hotel.Name</a></li>
    <li><a href="@Url.Action("Index", "Room", new { Id = __room.IdHotel })">Habitaciones</a></li>
    <li><a href="@Url.Action("Edit", "Room", new { Id = __room.Id }))">@__room.Name</a></li>
    <li><a href="@Url.Action("Index", "RoomAccomodation", new { Id = __room.Id }))">Camas</a></li>
    <li>Asignar Camas</li>
</ul>
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td valign="middle">
            <h1 style="margin: 0px; padding: 0px">
                Asiganar camas para la habitación @__room.Name
                <br />
                en @__room.Hotel.Name</h1>
        </td>
        <td>
            <a href="@Url.Action("Index", "RoomAccomodation", new { Id = __room.Id })" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/back.png")" />
                &nbsp;&nbsp;Volver</a>
        </td>
    </tr>
</table>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Camas</legend>
        @Html.Hidden("IdRoom", __room.Id)
        <div class="editor-label">
            Cantidad
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity)
        </div>
        <div class="editor-label">
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdRoomBed", string.Empty)
            @Html.ValidationMessageFor(model => model.IdRoomBed)
        </div>
        <p>
            @if (ViewBag.Error != null)
            { 
                <span class="red">@ViewBag.Error</span><br /><br />
            }
            <input type="submit" value="Asignar" />
        </p>
    </fieldset>
}
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td>
            <a href="@Url.Action("Index", "RoomAccomodation", new { Id = __room.Id })" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/back.png")" />
                &nbsp;&nbsp;Volver</a>
        </td>
    </tr>
</table>
