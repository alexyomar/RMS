@model IEnumerable<RMS.Models.Period>
@{
    ViewBag.Title = "Index";
    RMS.Models.Hotel __hotel = ViewBag.Hotel as RMS.Models.Hotel;
}
<h2>
    Listado de Temporadas (@__hotel.Name)</h2>
<p>
    @Html.ActionLink("Crear Nueva", "Create", new { IdHotel = __hotel.Id })
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Fecha Inicio
        </th>
        <th>
            Fecha Fin
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeginDay) / @Html.DisplayFor(modelItem => item.BeginMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDay) / @Html.DisplayFor(modelItem => item.EndMonth)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Volver a Hoteles", "Index", "Hotel", null, null)
</p>
