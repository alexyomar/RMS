@model RMS.Models.Reservation
@{
    ViewBag.Title = "Editar Reservación";
}
<ul id="crumbs">
    <li><a href="#">Reservaciones</a></li>
    <li>Editar Reservación</li>
</ul>
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td valign="middle">
            <h1 style="margin: 0px; padding: 0px">
                Editar Reservación</h1>
        </td>
        <td>
            <a href="@Url.Action("Index", "Budget")" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/back.png")" />
                &nbsp;&nbsp;Volver</a>
        </td>
    </tr>
</table>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
  
    <fieldset>
        <legend>Reservación</legend>
        <br />
        <table class="table">
            <tr>
                <th>
                    Número
                </th>
                <th>
                    Cliente
                </th>
                <th>
                    Fecha de reservación
                </th>
                <th>
                    Fecha de Llegada
                </th>
                <th>
                    Fecha de Salida
                </th>
            </tr>
            <tr>
                <td>@Model.Id
                </td>
                <td>@Model.Customer.Name @Model.Customer.LastName
                </td>
                <td>@Model.ReservationDate.ToShortDateString()
                </td>
                <td>@Model.Arrival.ToShortDateString()
                </td>
                <td>@Model.Departure.ToShortDateString()
                </td>
            </tr>
        </table>
        <br />
        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">
            Estatus:
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdReservationStatus", String.Empty)
            @Html.ValidationMessageFor(model => model.IdReservationStatus)
        </div>
        <div class="editor-label">
            Fecha Límite:
        </div>
        <div class="editor-field">
            @Html.TextBox("PayLimit", (Model.PayLimit.HasValue ? Model.PayLimit.Value.ToShortDateString() : ""), new { @class = "datepicker" })
            @Html.ValidationMessageFor(model => model.Departure)
        </div>
        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td>
            <a href="@Url.Action("Index", "Budget")" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/back.png")" />
                &nbsp;&nbsp;Volver</a>
        </td>
    </tr>
</table>
<script type="text/javascript">
    $(".datepicker").datepicker();
</script>
