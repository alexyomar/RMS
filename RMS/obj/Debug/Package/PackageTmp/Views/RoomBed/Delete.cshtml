@model RMS.Models.RoomBed
@{
    ViewBag.Title = "Delete";
}
<ul id="crumbs">
    <li><a href="@Url.Action("Index", "Hotel")">Hoteles</a></li>
    <li><a href="@Url.Action("Index")">Tipos de Camas</a></li>
    <li>Eliminar Tipo de Camas</li>
</ul>
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td valign="middle">
            <h1 style="margin: 0px; padding: 0px">
                Eliminar Tipo de Cama</h1>
        </td>
        <td>
            <a href="@Url.Action("Index")" class="button" style="float: right;">
