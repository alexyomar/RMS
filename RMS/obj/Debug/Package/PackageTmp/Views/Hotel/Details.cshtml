@model RMS.Models.Hotel
@{
    ViewBag.Title = "Detalles del Hotel";
}
<h2>
    Detalles de @Model.Name</h2>
<fieldset>
    <div class="display-label">
        Nombre</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>
    <div class="display-label">
        Descripción</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
    <div class="display-label">
        Dirección:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Address)
    </div>
    <div class="display-label">
        Estado:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.State.Name)
    </div>
    <div class="display-label">
        Datos de Contacto:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Contact)
    </div>
    <div class="display-label">
        Activo?</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Active)
    </div>
    <div class="display-label">
        Puede emitir cotizaciones?</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CanSell)
    </div>
