@model RMS.Models.RoomOcupation
@{
    ViewBag.Title = "Crear";
    RMS.Models.Room __room = ViewBag.Room;
    string __datestart = Session["DateStart"] != null ? Session["DateStart"].ToString() : "";
    string __dateend = Session["DateEnd"] != null ? Session["DateEnd"].ToString() : "";
}
<ul id="crumbs">
    <li><a href="@Url.Action("Index", "Hotel")">Hoteles</a></li>
    <li><a href="@Url.Action("Edit", "Hotel", new { Id = __room.Hotel.Id })">@__room.Hotel.Name</a></li>
    <li><a href="@Url.Action("Index", "Room", new { Id = __room.Hotel.Id })">Habitaciones</a></li>
    <li><a href="@Url.Action("Edit", "Room", new { Id = __room.Id })">@__room.Name</a></li>
    <li><a href="@Url.Action("Index", "RoomRate", new { Id = __room.Id })">Tarifas</a></li>
    <li>Crear Tarifa</li>
</ul>
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td valign="middle">
            <h1 style="margin: 0px; padding: 0px">
                Crear Tarifa para la Habitación @__room.Name<br />
                en @__room.Hotel.Name</h1>
        </td>
        <td>
            <a href="@Url.Action("Index", "RoomRate", new { Id = __room.Id })" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/back.png")" />
                &nbsp;&nbsp;Volver</a>
        </td>
    </tr>
</table>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Tarifa</legend>
        @Html.Hidden("IdRoom", __room.Id)
        <div class="editor-label">
            Tipo
        </div>
        <div class="editor-field">
            <select name="Name">
                <option value="Sencilla">Sencilla</option>
                <option value="Doble">Doble</option>
                <option value="Triple">Triple</option>
                <option value="Cuádruple">Cuádruple</option>
                <option value="Quíntuple">Quíntuple</option>
                <option value="Séxtuple">Séxtuple</option>
                <option value="Niño">Niño</option>
            </select>
        </div>
        <div class="editor-label">
            Inicia
        </div>
        <div class="editor-field">
            @Html.TextBox("DateStart", __datestart, new { @class = "datepicker" })
            @Html.ValidationMessageFor(model => model.DateStart)
        </div>
        <div class="editor-label">
            Termina
        </div>
        <div class="editor-field">
            @Html.TextBox("DateEnd", __dateend, new { @class = "datepicker" })
            @Html.ValidationMessageFor(model => model.DateEnd)
        </div>
        <div class="editor-label">
            Tarifa Rack PPN Hotel
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PriceRack)
            @Html.ValidationMessageFor(model => model.PriceRack)
        </div>
        <div class="editor-label">
            Tarifa Neta PPN
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>
        <div class="editor-label">
            % Descuento 2N
        </div>
        <div class="editor-field">
            @Html.TextBox("Discount1", "5")
            @Html.ValidationMessageFor(model => model.Discount1)
        </div>
        <div class="editor-label">
            % Descuento 4N
        </div>
        <div class="editor-field">
            @Html.TextBox("Discount2", "6")
            @Html.ValidationMessageFor(model => model.Discount2)
        </div>
        <div class="editor-label">
            % Descuento 7N
        </div>
        <div class="editor-field">
            @Html.TextBox("Discount3", "7")
            @Html.ValidationMessageFor(model => model.Discount3)
        </div>
        <div class="editor-label">
            % Agente
        </div>
        <div class="editor-field">
            @Html.TextBox("PercentAgent", "6")
            @Html.ValidationMessageFor(model => model.PercentAgent)
        </div>
        <div class="editor-label">
            % Gastos de Administración
        </div>
        <div class="editor-field">
            @Html.TextBox("PercentAdmin", "4")
            @Html.ValidationMessageFor(model => model.PercentAdmin)
        </div>
        <div class="editor-label">
            Activo?
        </div>
        <div class="editor-field">
            <input type="checkbox" name="Active" checked="checked" />
        </div>
        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td valign="middle">
        </td>
        <td>
            <a href="@Url.Action("Index", "RoomRate", new { Id = __room.Id })" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/back.png")" />
                &nbsp;&nbsp;Volver</a>
        </td>
    </tr>
</table>
<script type="text/javascript">
    $(".datepicker").datepicker();
</script>
