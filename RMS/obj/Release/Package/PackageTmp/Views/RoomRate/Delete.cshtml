@model RMS.Models.RoomOcupation

@{
    ViewBag.Title = "Eliminar";
}

<ul id="crumbs">
    <li><a href="@Url.Action("Index", "Hotel")">Hoteles</a></li>
    <li><a href="@Url.Action("Edit", "Hotel", new { Id = Model.Room.Hotel.Id })">@Model.Room.Hotel.Name</a></li>
    <li><a href="@Url.Action("Index", "Room", new { Id = Model.Room.Hotel.Id })">Habitaciones</a></li>
    <li><a href="@Url.Action("Edit", "Room", new { Id = Model.Room.Id })">@Model.Room.Name</a></li>
    <li><a href="@Url.Action("Index", "RoomRate", new { Id = Model.Room.Id })">Tarifas</a></li>
    <li>Eliminar Tarifa</li>
</ul>
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td valign="middle">
            <h1 style="margin: 0px; padding: 0px">
                Eliminar Tarifa @Model.Name para la Habitación @Model.Room.Name<br />
                en @Model.Room.Hotel.Name</h1>
        </td>
        <td>
            <a href="@Url.Action("Index", "RoomRate", new { Id = Model.Room.Id })" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/back.png")" />
                &nbsp;&nbsp;Volver</a>
        </td>
    </tr>
</table>
<h3>¿Está seguro de borrar la tarifa @Model.Name?</h3>
<fieldset>
    <legend>Tarifa</legend>

    <div class="display-label">Nombre</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">Capacidad</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Capacity)
    </div>

    <div class="display-label">Tarifa Rack PPN Hotel</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PriceRack)
    </div>

        <div class="display-label">Tarifa Neta PPN</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Price)
    </div>

    <div class="display-label">Inicia</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DateStart)
    </div>

    <div class="display-label">Termina</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DateEnd)
    </div>

    <div class="display-label">% Descuento 2N</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Discount1)
    </div>

    <div class="display-label">% Descuento 4N</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Discount2)
    </div>

    <div class="display-label">% Descuento 7N</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Discount3)
    </div>

    <div class="display-label"> % Agente</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PercentAgent)
    </div>

    <div class="display-label">% Gastos de Administración</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PercentAdmin)
    </div>

    <div class="display-label">Activo</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Active)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Eliminar" /> |
        @Html.ActionLink("Volver al listado", "Index", new { Id = Model.IdRoom })
    </p>
}
