@model RMS.Models.Room
@{
    ViewBag.Title = "Create";
    RMS.Models.Hotel __hotel = ViewBag.Hotel;
}
<ul id="crumbs">
    <li><a href="@Url.Action("Index", "Hotel")">Hoteles</a></li>
    <li><a href="@Url.Action("Index", "Hotel")">@__hotel.Name</a></li>
    <li><a href="@Url.Action("Index", new { Id = __hotel.Id })">Habitaciones</a></li>
    <li>Crear Habitación</li>
</ul>
<h1 style="margin: 30px 0px;">
    Crear Habitación para @__hotel.Name</h1>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Habitación</legend>
        @Html.Hidden("IdHotel", __hotel.Id)
        <div class="editor-label">
            Nombre
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            Descripción
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="editor-label">
            Activo?
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Active)
            @Html.ValidationMessageFor(model => model.Active)
        </div>
        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Volver al listado", "Index", new { Id = __hotel.Id })
</div>
