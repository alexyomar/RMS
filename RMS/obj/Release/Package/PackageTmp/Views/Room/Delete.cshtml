@model RMS.Models.Room
@{
    ViewBag.Title = "Eliminar";
}
<ul id="crumbs">
    <li><a href="@Url.Action("Index", "Hotel")">Hoteles</a></li>
    <li><a href="@Url.Action("Index", "Hotel")">@Model.Hotel.Name</a></li>
    <li><a href="@Url.Action("Index", new { Id = Model.Hotel.Id })">Habitaciones</a></li>
    <li>Eliminar Habitación</li>
</ul>
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td valign="middle">
            <h1 style="margin: 0px; padding: 0px">
                Eliminar Habitación @Model.Name de @Model.Hotel.Name</h1>
        </td>
        <td>
            <a href="@Url.Action("Index", "Room", new { Id = Model.IdHotel })" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/back.png")" />
                &nbsp;&nbsp;Volver</a>
        </td>
    </tr>
</table>
<h3>
    Está seguro de eliminar esta habitación?</h3>
<fieldset>
    <legend>Habitación</legend>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(x => x.Id)
        <div class="display-label">
            Hotel</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Hotel.Name)
        </div>
        <div class="display-label">
            Nombre</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Name)
        </div>
        <div class="display-label">
            Descripción</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Description)
        </div>
        <div class="display-label">
            Activo</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Active)
        </div>
        <br />
        <input type="submit" value="Eliminar" />
    }
</fieldset>
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td valign="middle">
        </td>
        <td>
            <a href="@Url.Action("Index", "Room", new { Id = Model.IdHotel })" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/back.png")" />
                &nbsp;&nbsp;Volver</a>
        </td>
    </tr>
</table>
