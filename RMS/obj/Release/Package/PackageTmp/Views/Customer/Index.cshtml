@model IEnumerable<RMS.Models.Customer>
@{
    ViewBag.Title = "Listado de Clientes";
}
<ul id="crumbs">
    <li><a href="@Url.Action("Index", "Budget")">Reservaciones</a></li>
    <li><a href="@Url.Action("Index", "Customer")">Clientes</a></li>
    <li>Listado de Clientes</li>
</ul>
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td valign="middle">
            <h1 style="margin: 0px; padding: 0px">
                Listado de Clientes</h1>
        </td>
        <td>
            <a href="@Url.Action("Create")" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/add.png")" />
                &nbsp;&nbsp;Crear Nuevo</a>
        </td>
    </tr>
</table>
<table id="tabla">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nombre
            </th>
            <th>
                Cédula / R.I.F.
            </th>
            <th>
                Teléfono
            </th>
            <th>
                Email
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonalId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="actions">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    </tfoot>
</table>
<table border="0" cellpadding="0" cellspacing="0" style="width: 100%; margin: 30px 0px;">
    <tr>
        <td valign="middle">
        </td>
        <td>
            <a href="@Url.Action("Create")" class="button" style="float: right;">
                <img src="@Url.Content("~/Content/img/add.png")" />
                &nbsp;&nbsp;Crear Nuevo</a>
        </td>
    </tr>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tabla').dataTable({
            "bJQueryUI": true,
            "aaSorting": [[0, 'desc']]
        });
    });

</script>
