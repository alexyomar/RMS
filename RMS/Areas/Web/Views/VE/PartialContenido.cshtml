@model RMS.Models.Content
<div id="contentdata">
    <h1 class="header">@Html.DisplayFor(model => model.Title)
    </h1>
    <ul id="myGallery">
        <li>
            <img src="@Url.Content("~/Areas/Web/Content/images/bg/1.jpg")" /></li>
        <li>
            <img src="@Url.Content("~/Areas/Web/Content/images/bg/2.jpg")" /></li>
        <li>
            <img src="@Url.Content("~/Areas/Web/Content/images/bg/3.jpg")" /></li>
        <li>
            <img src="@Url.Content("~/Areas/Web/Content/images/bg/4.jpg")" /></li>
        <li>
            <img src="@Url.Content("~/Areas/Web/Content/images/bg/5.jpg")" /></li>
        <li>
            <img src="@Url.Content("~/Areas/Web/Content/images/bg/6.jpg")" /></li>
        <li>
            <img src="@Url.Content("~/Areas/Web/Content/images/bg/7.jpg")" /></li>
        <li>
            <img src="@Url.Content("~/Areas/Web/Content/images/bg/8.jpg")" /></li>


    </ul>


    <small><i>Última actualización: @Model.TimestampEdit</i></small>
    <br />
    <table style="width: 890px;" cellpadding="0" cellspacing="0">
        <tr>
            <td style="vertical-align: middle">
                <h2><b>Precio: Bs. @Math.Round(Model.Price, 2)</b></h2>
            </td>
            <td style="text-align: right; vertical-align: middle">
                <img src="@Url.Content("~/Areas/Web/Content/images/layout/reservar.png")" alt="reservar" /></td>

        </tr>

    </table>

    <br />
    <br />
    <div style="width: 896px;">
        @Html.DisplayFor(model => model.Description)
    </div>
    <br />
    <br />
    ¡¡¡LINK DE DESCARGA!!!
</div>

<script>
    $(document).ready(function () {
        $('#myGallery').galleryView({
            filmstrip_style: 'showall',
            filmstrip_position: 'right',
            frame_height: 32,
            frame_width: 50
        });
    });

</script>
